<% provide(:title, 'Events') %>
   

<h1> Showing <b><%= @events.count %></b> Live Events </h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th></th>
      <th>Category</th>
      <th>Title</th>
      <th>Desc</th>
      <th>Date</th>
      <th>Time</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
  <% @events.each do |event| %>

    <tr>
      <td><i class="<%= event.category.logo %>"></i></td>
      <td><%= event.category.name %></td>
      <td><a href="events/<%= event.id %>"><%= event.title %></a></td>
      <td><%= event.description %></td>
      <td><%= event.date %></td>
      <td><%= event.time %></td>
      <td><%= event.location %></td>
    </tr>
<% end %>
  </tbody>
</table> 



 <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            <div class=".col-md-6 .col-md-offset-3">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <%= link_to "Create an event", new_event_path, class: "btn btn-default btn-lg btn-primary" %>
                    </div>
                </div>


            </div>
        </div>
    </div>


