<% provide(:title, 'Create') %>
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>

<body>
    <div class="container">
        <!-- Example row of columns -->

        <div class="row">
            <div class="col-md-9 col-md-offset-1">
            <br>
                        
                         <legend><h1> Create an account</h1></legend>
                       <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |form|%>
                        
                           
                                <div class="form-group">
                                <%= form.label :name, class: "col-lg-2 control-label" %>

                                    <div class="col-lg-10">
                                        <%= form.text_field :name, class: "form-control", placeholder: "Ernest Shackleton"%> 
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= form.label :email, class: "col-lg-2 control-label" %>

                                    <div class="col-lg-10">
                                        <%= form.text_field :email, class: "form-control", placeholder: "shackleton1850@kellogg.northwestern.edu"%>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= form.label :password, class: "col-lg-2 control-label" %>

                                    <div class="col-lg-10">
                                        <%= form.text_field :password, class: "form-control" %>
                                    </div>
                                </div>
                               
                               <div class="form-group">

                                    <div class="col-lg-10">
                                        <%= form.text_field :password, class: "form-control" %>
                                    </div>
                                </div>

                               <div class="form-group">
                                    <div class="col-lg-10">
                                        <%= form.input_field :tandc, as: :boolean,boolean_style: :inline %> You have read and agree to the <%= link_to "Terms of Service", terms_path %>
                                    </div>
                                </div>

                                <div class="col-lg-10 col-lg-offset-2">
<%= form.button :submit, class: "btn btn-success" %>  
                                </div>
                                    <% end %> 
                    
               
            </div>
        </div>

        
    </div>
</body>
</html>
